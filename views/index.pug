doctype
html(lang='pl')
    head
        meta(charset='utf-8')
        title todo app
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous") 
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous") 
    body
        nav(class='navbar navbar-expand-lg navbar-dark bg-dark')
            div(class='collapse navbar-collapse justify-content-md-center')
                ul(class='navbar-nav')
                    li(class='nav-item active')
                        a(class='nav-link' href='#') TODO

        div.list-group
            each todo in todos
                div(class='card')
                    div(class='card-body')
                        h5.card-title= todo.thing_to_do
                        p(class='mb-0 opacity-75')= todo.done
                        button(class='btn btn-primary') edit
                            input(type="hidden", name="edit" value=todo._id)
                        a(class='btn btn-danger' href="/remove/" + todo._id) remove

        div(class='modal-content rounded-5 shadow' id="add-form")
            div(class='modal-header p-5 pb-4 border-bottom-0')
                h2(class='fw-bold mb-0') DODAJ NOWE ZADANIE
            div(class='modal-body p-5 pt-0')
                form(action="/", method="post")
                    div(class='form-floating mb-3')
                        input(type="text", name="todo" class="form-control rounded-4")
                        label(for="floatingInput") Zadanie
                    
                    input(type="submit", value="Dodaj todo" class='w-100 mb-2 btn btn-lg rounded-4 btn-primary') 


        div(class='modal-content rounded-5 shadow' id="edit-form")
            div(class='modal-header p-5 pb-4 border-bottom-0')
                h2(class='fw-bold mb-0') EDYTUJ ZADANIE
                button(class='btn-close')
            div(class='modal-body p-5 pt-0')
                form#edit(action="/edit/", method="post")
                    div(class='form-floating mb-3')
                        input(type="text", name="todo" id="floatingInput" class="form-control rounded-4")
                        label(for="floatingInput") Zadanie
                    
                    input(type="submit", value="Zeedytuj" class='w-100 mb-2 btn btn-lg rounded-4 btn-primary') 



        script(src="https://code.jquery.com/jquery-3.6.0.min.js")
        script(src="/que.js")